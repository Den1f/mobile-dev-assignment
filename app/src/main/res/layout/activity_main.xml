<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Welcome Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Assignment 2"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- GridLayout for question buttons -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:padding="8dp">

            <!-- Button for each question -->
            <Button
                android:id="@+id/btnQuestion1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Question 1"
                android:onClick="openQuestion1"
                android:layout_margin="8dp"
                android:backgroundTint="#CC7A48"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnQuestion2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Question 2"
                android:onClick="openQuestion2"
                android:layout_margin="8dp"
                android:backgroundTint="#CC7A48"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnQuestion3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Question 3"
                android:onClick="openQuestion3"
                android:layout_margin="8dp"
                android:backgroundTint="#CC7A48"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnQuestion4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Question 4"
                android:onClick="openQuestion4"
                android:layout_margin="8dp"
                android:backgroundTint="#CC7A48"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnQuestion5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Question 5"
                android:onClick="openQuestion5"
                android:layout_margin="8dp"
                android:backgroundTint="#CC7A48"
                android:textColor="#FFFFFF"/>

        </GridLayout>

    </LinearLayout>
</ScrollView>
